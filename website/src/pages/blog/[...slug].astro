---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import AdBanner from '../../components/AdBanner.astro';
import ProseContent from '../../components/ProseContent.astro';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL}/`;
---

<Layout title={entry.data.title}>
  <main class="pt-24 pb-12">
    <article class="max-w-4xl mx-auto px-6">

      <!-- Navigation -->
      <div class="flex justify-between items-center mb-12">
        <a href={`${base}blog`} class="inline-flex items-center gap-2 text-sm font-mono text-bone-dark/60 hover:text-bone transition-colors group no-underline">
          <span class="group-hover:-translate-x-1 transition-transform">‚Üê</span> Back to Blog
        </a>
      </div>

      <!-- Auto Translation Script (detects browser language and translates automatically) -->
      <script is:inline>
        (function() {
          // Get browser language (e.g., 'es', 'fr', 'de')
          const browserLang = navigator.language?.split('-')[0] || 'en';

          // Skip if already English or if translation cookie exists
          if (browserLang === 'en') return;

          // Check if already translated (Google sets a cookie)
          const googtrans = document.cookie.match(/googtrans=([^;]+)/);
          if (googtrans && googtrans[1].includes(browserLang)) return;

          // Set translation cookie for automatic translation
          document.cookie = `googtrans=/en/${browserLang};path=/;domain=${location.hostname}`;
          document.cookie = `googtrans=/en/${browserLang};path=/`;

          // Load Google Translate and auto-translate
          function loadGoogleTranslate() {
            const script = document.createElement('script');
            script.src = '//translate.google.com/translate_a/element.js?cb=googleTranslateInit';
            script.async = true;
            document.body.appendChild(script);
          }

          window.googleTranslateInit = function() {
            new google.translate.TranslateElement({
              pageLanguage: 'en',
              includedLanguages: 'es,fr,de,pt,it,ja,ko,zh-CN,ru,ar,hi',
              layout: google.translate.TranslateElement.InlineLayout.HORIZONTAL,
              autoDisplay: false
            }, 'google_translate_element');
          };

          // Delay load to ensure page is ready
          if (document.readyState === 'complete') {
            loadGoogleTranslate();
          } else {
            window.addEventListener('load', loadGoogleTranslate);
          }
        })();
      </script>
      <div id="google_translate_element" class="hidden"></div>

      <!-- Hide Google Translate toolbar -->
      <style is:global>
        .goog-te-banner-frame, .skiptranslate { display: none !important; }
        body { top: 0 !important; }
        .goog-te-gadget { font-size: 0 !important; }
      </style>

      <!-- Header -->
      <header class="mb-16 text-center">
        <div class="flex justify-center gap-3 mb-6">
          {entry.data.categories?.map(cat => (
            <span class="px-4 py-1.5 rounded-full bg-white/5 border border-white/10 text-xs font-bold uppercase tracking-wider text-emerald-400 shadow-sm">
              {cat}
            </span>
          ))}
        </div>
        <h1 class="text-4xl md:text-6xl font-bold text-bone mb-8 leading-tight tracking-tight">{entry.data.title}</h1>
        {entry.data.description && <p class="text-xl md:text-2xl text-bone-dark/70 mb-10 max-w-2xl mx-auto leading-relaxed">{entry.data.description}</p>}

        <!-- GitHub Link Button -->
        {entry.data.repo && (
          <a href={`https://github.com/${entry.data.repo}`} target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-3 px-8 py-4 bg-[#24292e] hover:bg-[#2f363d] text-white rounded-full transition-all mb-12 font-bold text-lg shadow-lg hover:shadow-xl hover:-translate-y-1 no-underline">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
            </svg>
            View on GitHub
          </a>
        )}

        {entry.data.images?.screenshot && (
          <div class="rounded-3xl overflow-hidden border border-white/10 mb-16 shadow-2xl shadow-black/50 ring-1 ring-white/5">
            <img src={entry.data.images.screenshot} alt={entry.data.title} class="w-full h-auto object-cover" />
          </div>
        )}
      </header>

      <!-- Top Contributors Section -->
      {entry.data.insights?.top_contributors && entry.data.insights.top_contributors.length > 0 && (
        <div class="mb-16 p-8 bg-gradient-to-br from-white/5 to-transparent rounded-3xl border border-white/10 backdrop-blur-sm">
          <h3 class="text-xl font-bold text-bone mb-6 flex items-center gap-3">
            <span class="text-2xl">üë•</span> Top Contributors
          </h3>
          <div class="flex flex-wrap gap-4">
            {entry.data.insights.top_contributors.map((contributor) => (
              <a href={contributor.html_url} target="_blank" rel="noopener noreferrer" class="flex items-center gap-3 bg-black/40 hover:bg-white/10 px-4 py-3 rounded-xl transition-all group no-underline border border-white/5 hover:border-emerald-500/30 hover:scale-105">
                <img src={contributor.avatar_url} alt={contributor.login} class="w-10 h-10 rounded-full border-2 border-white/10 group-hover:border-emerald-500/50 transition-colors" />
                <div class="flex flex-col">
                  <span class="text-sm font-bold text-bone group-hover:text-emerald-400 transition-colors">{contributor.login}</span>
                  <span class="text-xs text-bone-dark/60">{contributor.contributions} commits</span>
                </div>
              </a>
            ))}
          </div>
        </div>
      )}

      <!-- Main Content -->
      <div class="bg-[#141414] border border-white/5 rounded-3xl p-8 md:p-16 mb-16 shadow-xl">
        <ProseContent>
          <Content />
        </ProseContent>
      </div>

      <!-- Tech Ad Banner (Dynamic) -->
      <div class="bg-gradient-to-r from-blue-900/30 to-purple-900/30 border border-white/10 rounded-2xl p-8 mb-16 flex flex-col md:flex-row items-center justify-between gap-8 shadow-lg relative overflow-hidden group">
        <div class="absolute inset-0 bg-grid-white/[0.02] bg-[length:20px_20px]"></div>
        <div class="absolute -right-20 -top-20 w-64 h-64 bg-purple-500/10 rounded-full blur-3xl group-hover:bg-purple-500/20 transition-all duration-1000"></div>

        <div class="relative z-10">
          <h3 class="text-xl font-bold text-white mb-2 flex items-center gap-2">
            {import.meta.env.PUBLIC_AD_TITLE || "üöÄ Level Up Your Dev Skills"}
          </h3>
          <p class="text-base text-gray-300 m-0 max-w-xl leading-relaxed">
            {import.meta.env.PUBLIC_AD_TEXT || "Master advanced AI engineering and build tools like this one. Join our community of 10,000+ developers."}
          </p>
        </div>
        <a href={import.meta.env.PUBLIC_AD_LINK || "#"} target="_blank" rel="noopener noreferrer" class="relative z-10 px-8 py-3 bg-white text-black font-bold rounded-full hover:bg-gray-100 hover:scale-105 transition-all no-underline text-sm whitespace-nowrap shadow-lg">
          {import.meta.env.PUBLIC_AD_CTA || "Learn More"}
        </a>
      </div>

      <!-- Giscus Comments -->
      <div class="mt-16 pt-12 border-t border-white/5">
        <h3 class="text-2xl font-bold text-bone mb-8 flex items-center gap-3">
          <span>üí¨</span> Join the Discussion
        </h3>
        <div class="bg-[#0d1117] rounded-2xl p-8 border border-white/10 shadow-inner">
          <script src="https://giscus.app/client.js"
            data-repo="iberi22/bestof-opensource"
            data-repo-id="R_kgDONN1q_A"
            data-category="General"
            data-category-id="DIC_kwDONN1q_M4CkO5p"
            data-mapping="pathname"
            data-strict="0"
            data-reactions-enabled="1"
            data-emit-metadata="0"
            data-input-position="bottom"
            data-theme="dark_dimmed"
            data-lang="en"
            crossorigin="anonymous"
            async>
          </script>
        </div>
      </div>

      <!-- AdSense Banner - Support Section -->
      <div class="mt-16 pt-8 border-t border-white/5">
        <AdBanner slot="bottom" />
      </div>

    </article>
  </main>
</Layout>
