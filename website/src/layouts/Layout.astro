---
interface Props {
	title: string;
}

const { title } = Astro.props;
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="en" class="dark">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Best of Open Source" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@300;400;500;600;700&family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
		
		<!-- Google Translate API (hidden) -->
		<script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
		
		<title>{title}</title>
	</head>
	<body class="bg-dark-bg text-bone font-sans min-h-screen relative overflow-x-hidden">
		<!-- Google Translate Element (hidden) -->
		<div id="google_translate_element"></div>

		<!-- Noise Overlay -->
		<div class="fixed inset-0 z-[-1] opacity-[0.05] pointer-events-none bg-dark-bg" style="filter: url('#noiseFilter');"></div>
		<svg class="hidden">
			<filter id="noiseFilter">
				<feTurbulence type="fractalNoise" baseFrequency="0.6" stitchTiles="stitch" />
			</filter>
		</svg>

		<Navbar />
		<slot />
		<Footer />

		<script>
			// Automatic language detection and translation
			function googleTranslateElementInit() {
				// Get user's browser language
				const browserLang = navigator.language.split('-')[0]; // e.g., 'es', 'fr', 'de'
				const supportedLanguages = ['es', 'fr', 'de', 'pt', 'it', 'nl', 'pl', 'ja', 'zh', 'ar', 'ru'];
				
				// Only auto-translate if not English and language is supported
				if (browserLang !== 'en' && supportedLanguages.includes(browserLang)) {
					// Initialize translator but keep it hidden
					new google.translate.TranslateElement(
						{
							pageLanguage: 'en',
							autoDisplay: false,
							layout: google.translate.TranslateElement.FloatPosition.TOP_RIGHT
						},
						'google_translate_element'
					);
					
					// Hide the translator widget
					setTimeout(() => {
						const gTranslateWidget = document.getElementById('google_translate_element');
						if (gTranslateWidget) {
							gTranslateWidget.style.display = 'none';
						}
						
						// Auto-translate to detected language
						const selectElement = document.querySelector('select.goog-te-combo');
						if (selectElement) {
							selectElement.value = browserLang;
							selectElement.dispatchEvent(new Event('change'));
						}
					}, 500);
				}
			}
		</script>
	</body>
</html>

<style is:global>
	/* Custom scrollbar if needed */
	::-webkit-scrollbar {
		width: 8px;
	}
	::-webkit-scrollbar-track {
		background: #0A0A0A;
	}
	::-webkit-scrollbar-thumb {
		background: #2A2A2A;
		border-radius: 4px;
	}
	::-webkit-scrollbar-thumb:hover {
		background: #3A3A3A;
	}
</style>
